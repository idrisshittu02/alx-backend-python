#!/bin/bash
# Script to start Kubernetes cluster locally with Minikube

# 1. Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed. Please install it first."
    exit 1
fi

# 2. Start the cluster
echo "ğŸš€ Starting Minikube cluster..."
minikube start

# 3. Verify that the cluster is running
echo "ğŸ” Verifying cluster status..."
kubectl cluster-info

# 4. Retrieve available pods
echo "ğŸ“¦ Listing available pods..."
kubectl get pods --all-namespaces
